<div class="clearfix">
	<div id="form-content-region"></div>
	<div></div>
	<% if @footer: %>
		<footer>
			<% if @buttons: %>
				<div class="buttons-group">
					<% for button in @buttons: %>
						<button type=							"<%= button.buttonType %>" 
										data-form-button=	"<%= button.type %>" 
										class=						"<%= button.className %>">
										<%= button.text %>
						</button>
					<% end %>
				</div>
			<% end %>
		</footer>
	<% end %>
</div>